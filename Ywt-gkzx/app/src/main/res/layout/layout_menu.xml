<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:background="@drawable/menu_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/user_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="用户名"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_btn_bg_color"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="0dp"
            android:id="@+id/menu_account_information"
            style="@style/menu_style"
            android:drawableLeft="@drawable/user_info"
            android:text="账号信息" />

        <TextView
            android:id="@+id/menu_remittance_record"
            style="@style/menu_style"
            android:drawableLeft="@drawable/remittance_record"
            android:text="汇款记录" />

        <TextView
            android:id="@+id/menu_Shopping_record"
            style="@style/menu_style"
            android:drawableLeft="@drawable/shopping_record"
            android:text="购物记录" />

        <TextView
            android:id="@+id/setting"
            style="@style/menu_style"
            android:drawableLeft="@drawable/menu_setting"
            android:text="设置" />

        <Button
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/bt_shape"
            android:text="注销登录" />

    </LinearLayout>
</LinearLayout>


